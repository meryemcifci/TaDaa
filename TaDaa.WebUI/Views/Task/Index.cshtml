@using TaDaa.EntityLayer.Concrete
@model IEnumerable<TaskEntry>
@{
    ViewData["Title"] = "Bugün Neler Yaptım?";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script src="~/js/task.js"></script>
<link rel="stylesheet" href="~/css/task.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Ana Başlık -->
            <div class="text-center mb-5" style="background: linear-gradient(135deg, #F2C3D0 0%, #E999AF 100%); padding: 40px; border-radius: 20px; color: white;">
                <h1 class="display-4 font-weight-bold mb-3">BUGÜN NELER YAPTIM?</h1>
                <p class="lead mb-0">Hazır mısın? Yeni zaferler seni bekliyor!</p>
            </div>

            <!-- Görev Ekleme Formu -->
            <div class="card shadow-lg mb-4" style="border-radius: 15px; border: none;">
                <div class="card-body p-4">
                    <form asp-action="AddTask" method="post" id="taskForm">
                        <div class="mb-3">
                            <input type="text"
                                   class="form-control form-control-lg"
                                   name="TaskDescription"
                                   id="taskInput"
                                   placeholder="Bugünkü başarını yaz..."
                                   style="border-radius: 15px; border: 2px solid #e9ecef; font-size: 16px;"
                                   required>
                        </div>

                        <!-- Rating Seçimi -->
                        <div class="mb-3">
                            <label class="form-label fw-bold" style="color: #2c3e50;">Bu başarının puanı:</label>
                            <div class="rating-input">
                                <input type="radio" name="Rating" id="star5" value="5" required>
                                <label for="star5" title="Mükemmel">★</label>
                                <input type="radio" name="Rating" id="star4" value="4">
                                <label for="star4" title="Çok İyi">★</label>
                                <input type="radio" name="Rating" id="star3" value="3">
                                <label for="star3" title="İyi">★</label>
                                <input type="radio" name="Rating" id="star2" value="2">
                                <label for="star2" title="Orta">★</label>
                                <input type="radio" name="Rating" id="star1" value="1">
                                <label for="star1" title="Başlangıç">★</label>
                            </div>
                        </div>

                        <!-- Mood Note Seçimi -->
                        <div class="mb-3">
                            <label class="form-label fw-bold" style="color: #2c3e50;">Bu görevden nasıl hissettin?</label>
                            <div class="mood-quick-select mb-2">
                                <button type="button" class="btn btn-outline-success btn-sm mood-quick" data-mood="Enerjik ve zinde!">😄 Enerjik</button>
                                <button type="button" class="btn btn-outline-warning btn-sm mood-quick" data-mood="Çok lezzy oldu!">😎 Lezzetli</button>
                                <button type="button" class="btn btn-outline-info btn-sm mood-quick" data-mood="Büyük bir rahatlama!">😌 Rahatladım</button>
                            </div>
                            <textarea class="form-control"
                                      name="MoodNote"
                                      id="moodNoteInput"
                                      placeholder="Ya da kendi notunu yaz..."
                                      style="border-radius: 10px; resize: none;"
                                      rows="2"></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit"
                                    class="btn btn-lg px-5"
                                    style="background-color: #DF708E; border-radius: 25px; border: none; font-weight: bold;">
                                 BAŞARIYI EKLE 
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Görev Listesi -->
            <div class="task-list">
                @if (Model != null && Model.Any())
                {
                    @foreach (var task in Model.Where(t => t.Date.Date == DateTime.Today))
                    {
                        <div class="card mb-3 task-card shadow-sm" style="border-radius: 15px; border: none; transition: transform 0.2s;">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h5 class="mb-3" style="color: #2c3e50; font-weight: 600;">@task.TaskDescription</h5>

                                        <!-- Rating Display -->
                                        <div class="d-flex align-items-center mb-3">
                                            <span class="me-2" style="color: #6c757d; font-size: 14px;">Puan:</span>
                                            <div class="stars-display">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= task.Rating)
                                                    {
                                                        <span class="star-display filled">★</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="star-display">☆</span>
                                                    }
                                                }
                                            </div>
                                            <span class="ms-2 badge bg-primary">@task.Rating/5</span>
                                        </div>

                                        <!-- Mood Note Display -->
                                        @if (!string.IsNullOrEmpty(task.MoodNote))
                                        {
                                            <div class="mood-note-display mb-2">
                                                <div class="d-flex align-items-center mb-1">
                                                    <span style="color: #6c757d; font-size: 14px;">💭 Hissettiklerin:</span>
                                                </div>
                                                <div class="mood-note p-3" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 12px; border-left: 4px solid #007bff;">
                                                    <em style="color: #495057;">@task.MoodNote</em>
                                                </div>
                                            </div>
                                        }

                                        <div class="task-meta" style="color: #6c757d; font-size: 12px;">
                                            <i class="fas fa-calendar-alt me-1"></i>@task.Date.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                                        </div>
                                    </div>
                                    <div class="action-buttons">
                                        <button class="btn btn-outline-danger btn-sm delete-btn" data-task-id="@task.TaskEntryId" style="border-radius: 20px;" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5" style="color: #6c757d;">
                        <i class="fas fa-clipboard-list fa-3x mb-3" style="opacity: 0.3;"></i>
                        <p class="lead">Henüz görev eklenmemiş. İlk zaferini ekle!</p>
                    </div>
                }
            </div>

            <!-- Günün Emojisi Seçimi -->
            <div class="card shadow-lg mt-4" style="border-radius: 15px; border: none; background: linear-gradient(135deg, #F5F3E1 0%, #E7E4BC 100%);">
                <div class="card-body p-4 text-center">
                    <h4 class="mb-4" style="color: #2c3e50; font-weight: bold;">GÜNÜN EMOJİSİ: BUGÜN NASIL HİSSEDİYORSUN?</h4>
                    <div class="emoji-selection">
                        <button class="emoji-btn" data-emoji="😄" title="Mutlu">😄</button>
                        <button class="emoji-btn" data-emoji="😎" title="Havalı">😎</button>
                        <button class="emoji-btn" data-emoji="😍" title="Aşık">😍</button>
                        <button class="emoji-btn" data-emoji="🤯" title="Şaşkın">🤯</button>
                        <button class="emoji-btn" data-emoji="😴" title="Yorgun">😴</button>
                    </div>
                    @{
                        var todayEmoji = ViewBag.TodayEmoji as string;
                    }
                    @if (!string.IsNullOrEmpty(todayEmoji))
                    {
                        <div class="selected-emoji mt-3">
                            <h5>Bugün seçilen emoji: <span style="font-size: 2rem;">@todayEmoji</span></h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mood Note Modal -->
<div class="modal fade" id="moodModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 15px;">
            <div class="modal-header" style="border: none;">
                <h5 class="modal-title">Bu görevden nasıl hissettin?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="moodForm">
                <div class="modal-body">
                    <input type="hidden" id="moodTaskId">
                    <div class="mood-options mb-3">
                        <button type="button" class="btn btn-outline-success mood-option" data-mood="Enerjik ve zinde!">Enerjik ve zinde!</button>
                        <button type="button" class="btn btn-outline-warning mood-option" data-mood="Çok lezzy oldu!">Çok lezzy oldu!</button>
                        <button type="button" class="btn btn-outline-info mood-option" data-mood="Büyük bir rahatlama!">Büyük bir rahatlama!</button>
                    </div>
                    <textarea class="form-control" id="customMoodNote" placeholder="Ya da kendi notunu yaz..." style="border-radius: 10px;"></textarea>
                </div>
                <div class="modal-footer" style="border: none;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 20px;">İptal</button>
                    <button type="submit" class="btn btn-primary" style="border-radius: 20px; background: linear-gradient(45deg, #667eea, #764ba2); border: none;">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



