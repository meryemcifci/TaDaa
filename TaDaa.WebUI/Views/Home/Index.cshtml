@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="row align-items-center">
        <!-- Sol taraf: Yazılar -->
        <div class="col-12 col-md-6 text-center text-md-start mb-4 mb-md-0">
            <img src="~/images/TaDaa_LogoPembe.png" alt="HomePage" class="img-fluid" style="max-height: 100px; width: auto;">
            <h1 class="fw-bold">Günün Başarılarını <span class="text-warning">TaDaa</span> ile Kaydet!</h1>
            <p class="lead text-muted">Giriş Yap, Tadaalarını Ekle, İlham Ver.</p>

            <div class="d-flex flex-column flex-sm-row gap-3 mt-4 justify-content-center justify-content-md-start">
                <a class="btn btn-lg px-4" asp-area="" asp-controller="Account" asp-action="Login" style="background-color:#bfb74b; color:white;">Giriş Yap</a>
                <a class="btn btn-warning btn-lg px-4 text-white" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
            </div>
        </div>

        <!-- Sağ taraf: Resim -->
        <div class="col-12 col-md-6 text-center text-md-end">
            <img src="~/images/HomePage2.png" alt="HomePage" class="img-fluid" style="max-height: 800px; width: auto;">
        </div>
    </div>
</div>

